{
  "description": "TypeScript/JavaScript development hooks for type checking, linting, formatting, and testing",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PLUGIN_ROOT/hooks/scripts/typescript-hooks.sh\"",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
